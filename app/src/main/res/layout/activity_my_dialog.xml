<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.gridview.myDialog">

    <ImageView
        android:src="@drawable/image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mydialogImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This is nice "
        android:id="@+id/mydialogName"
        android:layout_below="@+id/mydialogImage"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OKKKK...."
        android:onClick="close"
        android:id="@+id/button"
        android:layout_below="@+id/mydialogName"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
